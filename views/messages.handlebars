        <form>
            <div class="form-group">
                <label for="comment">Comment</label>
                <textarea type="text" class="form-control" id="comment"></textarea>
            </div>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name">
